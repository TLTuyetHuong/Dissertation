
<div class="comment m-4">
    <form class="p-4" action="/khach-san/comment/{{slug}}" method="post">
        <h4><b>Viết bình luận <img src="https://img.icons8.com/external-vitaliy-gorbachev-lineal-color-vitaly-gorbachev/512/external-felt-pens-back-to-school-vitaliy-gorbachev-lineal-color-vitaly-gorbachev.png" width="20px" alt=""></b></h4>
        <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" placeholder="Hãy chia sẻ cảm xúc của mình bạn nhé ... (*Lưu ý: Bình luận này không thể xoá)"></textarea>
        <div class="mt-3" id="productDataDetails">
            <div class='rateYo' data-rateyo-rating='3' data-rateyo-score='4'></div>
            <span class='result'></span>
            <span id="rate"></span>
        </div>
        <div style="text-align: right;" class="mt-3">
            <button class="btn btn-primary" type="submit">Đăng</button>
        </div>
    </form>
</div>
<div class="my-5">
    {{#each comments}}
    <div class="row">
            <div class="col-1 mt-2" style="text-align: right;">
                <img style="border-radius: 100%;" src="https://joeschmoe.io/api/v1/random" width="70px" alt="">
            </div>
            <div class="col">
                <span id="rateYo" data-rateyo-rating="{{this.rate}}"></span>
                <div class="m-2 p-2" style="background-color:rgb(237, 237, 237); border-radius: 10px 10px; line-height: 10px;">
                    <p class="pt-2"><i>{{this.date}}</i></p>
                    <p><b>{{this.comment}}</b></p>
                </div>
            </div>
    </div>
    <div class="row" style="line-height: 10px;">
        <div class="col-1"></div>
        <div class="col like">
            <span>
                <form action="/khach-san/like/{{this._id}}?_method=PUT" method="post">
                    <button type="submit"><a type="button">Thích</a></button>
                </form>
            </span>
            <span><a type="button" style="padding-left: 3px;">{{this.like}}</a></span>
            {{!-- <span id="show"><a type="button" style="padding-left: 10px;">Bình luận</a></span> --}}
        </div>
    </div>
