<div class="comment m-4">
    <form class="p-4" action="/tin-tuc/{{slug}}" method="post">
        <h4><b>Viết bình luận <img src="https://img.icons8.com/external-vitaliy-gorbachev-lineal-color-vitaly-gorbachev/512/external-felt-pens-back-to-school-vitaliy-gorbachev-lineal-color-vitaly-gorbachev.png" width="20px" alt=""></b></h4>
        <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" placeholder="Viết bình luận ..."></textarea>
        <div style="text-align: right;" class="mt-3">
            <button class="btn btn-primary" type="submit">Đăng</button>
        </div>
    </form>
</div>
<div class="my-5">
    {{#each comments}}
    <div class="row">
            <div class="col-1 mt-2" style="text-align: right;">
                <img style="border-radius: 100%;" src="https://joeschmoe.io/api/v1/random" width="70px" alt="">
            </div>
            <div class="col m-2 p-2" style="background-color:rgb(237, 237, 237); border-radius: 10px 10px; line-height: 10px;">
                <p class="pt-2"><i>{{this.date}}</i></p>
                <p><b>{{this.comment}}</b></p>
            </div>
            <div class="row" style="line-height: 10px;">
                <div class="col-1"></div>
                <div class="col">
                    <span id="like" style="float: left;">
                        <form action="/tin-tuc/like/{{this._id}}?_method=PUT" method="post">
                            <button type="submit"><a type="submit">Thích</a></button>
                        </form>
                    </span>
                    <span style="float: left;"><a type="button" style="padding-left: 3px;">{{this.like}}</a></span>
                    <span ><a type="button" style="padding-left: 10px;" onclick="loadDoc()">Bình luận</a></span>
                </div>
            </div>
            <p id="demo"></p>
    </div>
    {{/each}}
</div>
<script>
function loadDoc() {
    const xhttp = new XMLHttpRequest();
    xhttp.onload = function() {
        document.getElementById("demo").innerHTML =
        this.responseText;
    }
    xhttp.open("GET", "/tin-tuc/sub-comment");
    xhttp.send();
}
</script>