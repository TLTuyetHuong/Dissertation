<style>
  a {
    color: royalblue;
  }
  .content a:hover{
    color: red;
  }
</style>
{{>header}}
<div class="background-news" style="background: linear-gradient(90deg, rgba(255,63,0,1) 0%, rgba(179,196,0,1) 63%, rgba(52,255,5,1) 100%);"></div>
<div class="container">
    <h1 class="tin-tuc font-effect-anaglyph"><b>TRẢI NGHIỆM</b></h1>
    <hr>
    <div class="p-2">
        <div class="row">
            {{#each trainghiems}}
            <div class="col-sm-6 col-lg-4 py-3">
                <div class="card img-fluid zoomin trainghiem">
                    <a href="/tour/trai-nghiem/{{this.slug}}">
                        <img style="height: 360px;" class="card-img-top" src="{{this.image}}"
                            alt="Card image">
                        <div class="card-img-overlay">
                            <h5 class="card-title p-1"><b><i style="padding-left: 5px; border-left: 5px solid {{this.color}};"></i>{{this.name}}</b></h5>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{>footer}}