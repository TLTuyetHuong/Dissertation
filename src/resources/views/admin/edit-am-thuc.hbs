<div id="page-top">
<!-- Page Wrapper -->
<div id="wrapper">
        {{>admin}}
        <div id="filter">
                <!-- Begin Page Content -->
                <div class="container-fluid" id="demo">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Quản lý Ẩm Thực</h1>
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                        class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
                </div>
                <form action="/admin/quan-ly-am-thuc/{{amthucs._id}}?_method=PUT" method="POST">
                <div class="modal-header">
                        <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">CẬP NHẬT ẨM THỰC</h1>
                        <a href="/admin/quan-ly-am-thuc" type="button" class="btn-close" aria-label="Close"></a>
                </div>
                <div class="modal-body">
                        <div>
                                <section class="vh-100" style="background-color: #eee; color:black">

                                        <div class="row px-5">
                                        <div class="col">
                                                <div class="form-outline flex-fill mb-0 py-2">
                                                        <input type="text" value="{{amthucs.title}}" name="name" id="form3Example1c" class="form-control" required />
                                                        <label class="form-label" for="form3Example1c">Tên ẩm thực</label>
                                                </div>
                                                <div class="form-outline flex-fill mb-0 py-2">
                                                        <input type="text" value="{{amthucs.address}}" name="address" id="form3Example1c" class="form-control" required />
                                                        <label class="form-label" for="form3Example1c">Địa chỉ</label>
                                                </div>
                                                <div class="form-outline flex-fill mb-0 py-2">
                                                        <input type="text" value="{{amthucs.price}}" name="price" id="form3Example1c" class="form-control" />
                                                        <label class="form-label" for="form3Example1c">Giá</label>
                                                </div>
                                        </div>
                                        <div class="col">
                                                <div class="form-outline flex-fill mb-0 py-2">
                                                        <input type="text" value="{{amthucs.place}}" name="place" id="form3Example1c" class="form-control" />
                                                        <label class="form-label" for="form3Example1c">URL vị trí</label>
                                                </div>
                                                <div class="form-outline flex-fill mb-0 py-2">
                                                        <input type="text" value="{{amthucs.image}}" name="image" id="form3Example1c" class="form-control" required />
                                                        <label class="form-label" for="form3Example1c">URL hình ảnh</label>
                                                </div>
                                                <div class="row">
                                                        <div class="col-6 form-outline flex-fill mb-0 py-2">
                                                                <input type="text" value="{{amthucs.open}}" name="open" id="form3Example1c" class="form-control" />
                                                                <label class="form-label" for="form3Example1c">Giờ mở cửa</label>
                                                        </div>
                                                        <div class="col-6 form-outline flex-fill mb-0 py-2">
                                                                <input type="text" value="{{amthucs.close}}" name="close" id="form3Example1c" class="form-control" />
                                                                <label class="form-label" for="form3Example1c">Giờ đóng cửa</label>
                                                        </div>
                                                </div>
                                        </div>
                                        <div class="form-outline flex-fill mb-0 py-2">
                                                <input type="text" value="{{amthucs.map}}" name="map" id="form3Example1c" class="form-control" required />
                                                <label class="form-label" for="form3Example1c">Map</label>
                                        </div>
                                        <div class="form-outline flex-fill mb-0 py-2">
                                                <select name="tag" class="form-select" aria-label="Default select example">
                                                        <option selected>Chọn tag</option>
                                                        <option value="{{amthucs.tag}}">Đặc sản</option>
                                                        <option value="{{amthucs.tag}}">Bánh dân gian</option>
                                                        <option value="{{amthucs.tag}}">Đồ ăn vặt</option>
                                                </select>
                                        </div>
                                        </div>
                                </section>
                        </div>
                </div>
                <div class="modal-footer">
                        <a href="/admin/quan-ly-am-thuc" type="button" class="btn btn-secondary">Thoát</a>
                        <button type="submit" class="btn btn-success">Lưu lại</button>
                </div>
                </form>
                </div>
        </div>
</div>
</div>