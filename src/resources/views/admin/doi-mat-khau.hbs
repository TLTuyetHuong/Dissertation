<link rel="stylesheet" href="/css/doiMK.css">
<div class="overlay">
    <!-- LOGN IN FORM by Omar Dsoky -->
    <form action="/admin/doi-mat-khau/{{admins._id}}?_method=PUT" method="POST">
        <!--   con = Container  for items in the form-->
        <div class="con">
            <!--     Start  header Content  -->
            <header class="head-form">
                <h2>Đổi Mật Khẩu</h2>
                <!--     A welcome message or an explanation of the login form -->
                <p>Hãy nhập mật khẩu mới của bạn!</p>
            </header>
            <!--     End  header Content  -->
            <br>
            <div class="field-set">
                <!--   Password -->

                <span class="input-item">
                    <i class="fa fa-key"></i>
                </span>
                <!--   Password Input-->
                <input class="form-input" type="password" placeholder="Nhập mật khẩu" id="pwd" name="password" required>

                <!--      Show/hide password  -->
                <span>
                    <i class="fa fa-eye" aria-hidden="true" type="button" id="eye"></i>
                </span>


                <br>
                <!--        buttons -->
                <!--      button LogIn -->
                <button class="log-in mt-5" type="submit">Xác nhận</button>
            </div>

            <!--   End Conrainer  -->
        </div>

        <!-- End Form -->
    </form>
</div>
<script>
    function show() {
        var p = document.getElementById('pwd');
        p.setAttribute('type', 'text');
    }

    function hide() {
        var p = document.getElementById('pwd');
        p.setAttribute('type', 'password');
    }

    var pwShown = 0;

    document.getElementById("eye").addEventListener("click", function () {
        if (pwShown == 0) {
            pwShown = 1;
            show();
        } else {
            pwShown = 0;
            hide();
        }
    }, false);
</script>