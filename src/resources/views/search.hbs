{{!-- Tour --}}
{{>header}}
{{!-- <div style="background: linear-gradient(0deg, rgb(108, 223, 251) 0%, rgba(91, 77, 159, 0.942) 100%);" class="background-news"></div> --}}
<header>
    <!-- Carousel wrapper -->
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://vcdn1-vnexpress.vnecdn.net/2022/03/30/ANH-2-1648614507.jpg?w=1200&h=0&q=100&dpr=1&fit=crop&s=vNeAdiJIPeDOBddNxhltzw"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://statics.vinpearl.com/cho-noi-cai-rang-7_1624263008.jpg" class="d-block w-100"
                    alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://thamhiemmekong.com/wp-content/uploads/2019/05/caudibo-cantho.jpg"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://media-cdn-v2.laodong.vn/Storage/NewsPortal/2020/7/13/819222/Duong-Bich-Hoa-O-Can-04.JPG"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://statics.vinpearl.com/cho-noi-cai-rang-23_1625335426.jpg" class="d-block w-100"
                    alt="...">
            </div>
        </div>
    </div>
    <!-- Carousel wrapper -->
</header>
<div class="container">
      <h1 class="font-effect-shadow-multiple mt-3" style="font-size: 60px; text-align: center">T O U R</h1>
      <div class="mt-3 p-3 tour">
            <div class="row">
                  {{#each tours}}
                  <div class="col-sm-6 col-lg-4 py-2">
                  <div class="card" style="width: 25rem;">
                        <a href="/tour/{{this.slug}}">
                              <img style="height: 270px;" src="{{this.image}}" class="card-img-top"
                              alt="{{this.name}}">
                        </a>
                        <div class="card-body" style="height: 145px;">
                              <a class="text-center" href="/tour/{{this.slug}}">
                              <h5 class="card-title"><b>{{this.name}}</b></h5>
                              </a>
                              <p class="card-text text-center" style="line-height: 1px;"><i>Thời gian: {{this.time}}</i></p>
                              <p style="margin-left: 0;"><b>Giá:</b> {{this.price}}<a style="margin-left: 28%" href="{{this.contact}}" target="_blank" class="btn btn-danger">Tìm hiểu</a></p>
                              
                        </div>
                  </div>
                  </div>
                  {{/each}}
            </div>
      </div>
      <h1 class="font-effect-shadow-multiple mt-3" style="font-size: 60px; text-align: center">T I N T Ứ C</h1>
      <div class="p-2">
            <div class="row">
                  {{#each tintucs}}
                  <div class="col-sm-6 col-lg-4 py-3">
                  <div class="card img-fluid zoomin trainghiem">
                        <a href="/tin-tuc/{{this.slug}}">
                              <img style="height: 360px;" class="card-img-top" src="{{this.image}}"
                              alt="Card image">
                              <div class="card-img-overlay">
                              <h5 class="card-title p-1"><b><i style="padding-left: 5px; border-left: 5px solid {{this.color}};"></i>{{this.title}}</b></h5>
                              </div>
                        </a>
                  </div>
                  </div>
                  {{/each}}
            </div>
      </div>
      <h1 class="font-effect-shadow-multiple mt-3" style="font-size: 60px; text-align: center">Đ Ị A Đ I Ể M</h1>
      <div class="p-2">
            <div class="row">
                  {{#each diadiems}}
                  <div class="col-sm-6 col-lg-4 py-3">
                  <div class="card img-fluid zoomin">
                        <a href="/du-lich/dia-diem/{{this.slug}}">
                              <img style="height: 360px;" class="card-img-top" src="{{this.image}}"
                              alt="Card image">
                              <div class="card-img-overlay">
                              <h4 class="card-title text-white title1 text-center p-1">{{this.name}}</h4>
                              </div>
                        </a>
                        <div class="card-img-overlay text-center p-2 place" style="background: linear-gradient(90deg,  rgb(5, 0, 92) 0%, rgb(13, 30, 156) 35%, rgb(5, 234, 255) 100%);">
                              <a href="{{this.place}}" target="_blank">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                              </svg>
                              {{this.address}}
                              </a>
                        </div>
                  </div>
                  
                  </div>
                  {{/each}}
            </div>
      </div>
      <h1 class="font-effect-shadow-multiple mt-3" style="font-size: 60px; text-align: center">Ẩ M T H Ự C</h1>
      <div class="p-2">
            <div class="row">
                  {{#each amthucs}}
                  <div class="col-sm-6 col-lg-4 py-3" id="{{this.tag}}">
                  <div class="card img-fluid zoomin">
                        <a href="/du-lich/am-thuc/{{this.slug}}">
                              <img style="height: 360px;" class="card-img-top" src="{{this.image}}"
                              alt="Card image">
                              <div class="card-img-overlay">
                              <h4 class="card-title text-white title1 text-center p-1">{{this.title}}</h4>
                              </div>
                        </a>
                        <div class="card-img-overlay text-center p-2 place">
                              <a href="{{this.place}}" target="_blank">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                              </svg>
                              {{this.address}}
                              </a>
                        </div>
                  </div>
                  
                  </div>
                  {{/each}}
            </div>
      </div>
</div>
{{>footer}}